<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/btnReportComplaints"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/report_complaints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btnViewComplaints"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/view_complaints"
        app:layout_constraintTop_toBottomOf="@id/btnReportComplaints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btnAddressedComplaints"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/addressed_complaints"
        app:layout_constraintTop_toBottomOf="@id/btnViewComplaints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
